<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CSM.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" style="color : black" asp-area="" asp-controller="Home" asp-action="Index">CSM</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="background-color : black ;border-radius : 5px ; margin : 5px">
                            <a class="nav-link " style="color : white"  asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item" style="background-color : black ;border-radius : 5px ; margin : 5px">
                            <a class="nav-link " style="color : white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
@*                            @if (User.IsInRole("Admin"))
*@                         
                                <li class="nav-item" style="background-color : black ;border-radius : 5px ; margin : 5px";>
                                    <a asp-action="Logout" asp-controller="Home" asp-area="Accounts" class="nav-link text-white">Logout</a>
                                </li>                         
                        }
                        else
                        {
                            <li class="nav-item register-link" style="background-color : black ;border-radius : 5px ; margin : 5px; margin-left:600px ">
                                <a asp-action="Register" asp-controller="Home" asp-area="Accounts" class="nav-link  " style="color : white">User Registration</a>
                            </li>
                            <li class="nav-item register-link" style="background-color : black ;border-radius : 5px ; margin : 5px">
                                <a asp-action="RegisterDriver" asp-controller="Home" asp-area="Accounts" class="nav-link" style="color : white">Driver Registration</a>
                            </li>
                            <li class="nav-item login-link" style="background-color : black ;border-radius : 5px ; margin : 5px">
                                <a asp-action="Login" asp-controller="Home" asp-area="Accounts" class="nav-link " style="color : white">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - CSM - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
