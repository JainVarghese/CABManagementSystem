@model IEnumerable<Routes>
@{
    ViewData["Title"] = "Index";
}

<h1>Routes</h1>

<div class="d-flex">
    <a asp-action="Create" class="btn btn-success ms-auto my-2">Create</a>
</div>

<div class="container-fluid">
    @if(Model.Any()){
        <div class="row gap-5">
            @foreach (var item in Model)
            {
                <div class=" col-sm-3 ">

                    <p><b>Source = </b>@item.source</p>
                    <p><b>Destination = </b>@item.Destination</p>
                    <p><b>Cost = </b>@item.Cost</p>

                    <div class="btn-group ms-auto">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Do you want to delete this Route?')">Delete</a>
                    </div>
                </div>
            }
        </div>
    }
    else{
        <div class="alert alert-info">
            No Routes were found. Please
            <a asp-action="Create" class="alert-link">Add a Route</a> first.
        </div>
    }
</div>

