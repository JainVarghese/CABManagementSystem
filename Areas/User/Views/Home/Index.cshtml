@model IEnumerable<Booking>
@{
    ViewData["Title"] = "Index";
}
<div class="d-flex">
    <a asp-action="Create" class="btn btn-success ms-auto my-2">Book Here</a>
</div>
<div class="container-fluid">
    @if (Model.Any())
    {
        <div class="row gap-5">
            @foreach (var item in Model)
            {
                <div class=" col-sm-3 ">

                    <p><b>Source= </b>@item.Route.source</p>
                    <p><b>Destination = </b>@item.Route.Destination</p>
                    <p><b>Booking Id = </b>@item.Id</p>
                    <p><b>Date And Time = </b>@item.Date</p>
                    <p><b>DriverId = </b>@item.DriverId</p>
                    

                    <div class="btn-group ms-auto">
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick=" return confirm('Do you want to delete this Pick Up?')">Delete</a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
         
            <a asp-action="Create" class="alert-link">Book</a> your first ride.
        </div>
    }
</div>